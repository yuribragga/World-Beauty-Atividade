{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",  
    "rootDir": "./src",    
    "outDir": "./dist",                         
    "esModuleInterop": true,   
    "moduleResolution": "node",              
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["./src"]
}
